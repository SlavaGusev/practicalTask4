# Use the official Node.js image as the base image
FROM node:14

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json to the working directory
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code to the working directory
COPY . .

# Install Chrome dependencies
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    && wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | apt-key add - \
    && sh -c 'echo "deb [arch=amd64] https://dl.google.com/linux/chrome/deb/ stable main" >> /etc/apt/sources.list.d/google-chrome.list' \
    && apt-get update && apt-get install -y google-chrome-stable

# Install chromedriver
RUN npm install chromedriver --save-dev

# Set environment variables for WebdriverIO
ENV CHROME_BIN=/usr/bin/google-chrome
ENV NODE_ENV=production

# Command to clone the repository, install dependencies, and run tests
CMD git clone https://github.com/SlavaGusev/practicalTask4.git . && npm install && npm run chrome
